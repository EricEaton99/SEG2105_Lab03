<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/resultEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter equation"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/buttonRow0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_1" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_2" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_3" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonRow1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_4" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_5" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_6" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonRow2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_7" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_8" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_9" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonRow3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonCE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickCE"
                        android:text="CE" />

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_0" />

                    <Button
                        android:id="@+id/buttonDec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:insetLeft="6dp"
                        android:insetRight="6dp"
                        android:onClick="onClickNumOpp"
                        android:text="@string/button_dec" />

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:insetLeft="6dp"
                        android:onClick="onClickMathOpp"
                        android:text="@string/button_add" />

                    <Button
                        android:id="@+id/buttonSub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:insetLeft="6dp"
                        android:onClick="onClickMathOpp"
                        android:text="@string/button_sub" />

                    <Button
                        android:id="@+id/buttonMul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:insetLeft="6dp"
                        android:onClick="onClickMathOpp"
                        android:text="@string/button_mul" />

                    <Button
                        android:id="@+id/buttonDiv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:insetLeft="6dp"
                        android:onClick="onClickMathOpp"
                        android:text="@string/button_div" />

                    <Button
                        android:id="@+id/buttonPow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:insetLeft="6dp"
                        android:onClick="onClickMathOpp"
                        android:text="@string/button_pow" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/buttonEqu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:onClick="onClickMathEqu"
            android:text="=" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>